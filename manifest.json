{
  "manifest_version": 3,
  "name": "SHIFT Модификации",
  "version": "1.2",
  "description": "Платные и бесплатные решения для Tilda.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.tilda.cc/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module" 
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.tilda.cc/page/?pageid=*"
      ],
      "js": [
        "content/config.js",
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "solutions/*/*.js"
      ],
      "matches": [
        "https://*.tilda.cc/*"
      ]
    }
  ],
  "icons": {
    "48": "assets/icon128.png"
  }
}

