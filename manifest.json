{
  "manifest_version": 3,
  "name": "SHIFT Tilda Mods",
  "version": "2.0.0",
  "description": "Платформа для модификаций и улучшений Tilda.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.supabase.co/*",
    "https://*.tilda.cc/*",
    "https://*.tilda.ws/*",
    "https://*.tilda.ru/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://tilda.cc/page/?pageid=*",
        "*://tilda.ws/page/?pageid=*",
        "*://tilda.ru/page/?pageid=*"
      ],
      "js": [
        "shift.js"
      ],
      "css": [
        "shift.css"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icon128.png"
    }
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "shift.js",
        "shift.css"
      ],
      "matches": [
        "*://tilda.cc/*",
        "*://tilda.ws/*",
        "*://tilda.ru/*"
      ]
    }
  ],
  "icons": {
    "48": "assets/icon128.png"
  }
}

